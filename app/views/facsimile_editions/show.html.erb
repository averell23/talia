<div id="content">
  <ul id="access_list">    
    <% types.each do |type| %>
      <li id="<%= type%>">
        <h1>
          <% url = "#{params[:id]}/#{type}" %>
          <% title = "#{type}" %>
          <% text = "<img src='/images/facsimile_edition/ico_#{type}.jpg' alt='link to #{type} section' width='78' height='70' border='0'/>#{type.capitalize.t}" %>
          <%= titled_link(url, text, title) %>
        </h1>
        <p><%= "Facsimile Edition #{type.capitalize} Description".t %></p>
      </li>
    <% end %>        
  </ul>  
</div>
