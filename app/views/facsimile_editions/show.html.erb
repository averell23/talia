<div id="content">


  <div id="scroll">
    <ul id="facsimile_frontpage_access_list">
      <% facsimile_edition_types.each do |type| %>
        <li id="<%= type.local_name %>">
          <h1>
            <% title = t(:"talia.types.#{type.local_name.underscore}") %>
            <%= titled_link("#{params[:id]}/#{type.local_name}",
              image_tag("facsimile_edition/ico_#{type.local_name}.jpg",
                :alt => "link to #{title} section",
                :width => '78', :height => '70', :border => '0') + title, title) %>
          </h1>
          <!-- <p><%= type_description(type) %></p> -->
        </li>
      <% end %>
    </ul>
  </div>

  <div id="content" class="divided">
    <div id="facsimile_frontpage_visore">
      <div class="frontpage">
        <p class="author"> talia.edition.Facsimile.frontpage author </p>
        <h2 class="title"> talia.edition.Facsimile.frontpage title </h2>
        <p class="description"> talia.edition.Facsimile.frontpage description </p>
        <p class="logo"> Nietzsche Source </p>
        <p class="link"> http://imac.local:3000 </p>
        <p class="year"> talia.edition.Facsimile.frontpage year </p>
      </div>
    </div>
  </div>

</div>
