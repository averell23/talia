<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
    <title><%= edition_page_title %></title>
    <%= stylesheet_link_tag 'main' %>
    <%= edition_style_link %>
    <%= javascript_include_tag 'prototype' %> 
    <%= javascript_include_tag 'scriptaculous' %> 
    <%= javascript_include_tag 'in_place_translator' %>
    <%= edition_javascript_include %> 
    <% for js in @javascripts %> 
      <%= javascript_include_tag js %>  
    <% end %>
  </head>
  <body>
    <%= edition_partial :script %>
    <div id="page_ext">
      <div id="page_int">
        <div id="header">
          <h1><%= edition_page_title %></h1>
          <h2><%= t(:'talia.global.simple_mode') %></h2>
          <h3><%= translate_edition_name(@edition)  %></h3>
          <%= edition_partial :search_box %>
        </div>
        <!--[if !IE]>header<![endif]-->
        <div id="navigate">
          <div id="tools">
            <ul>
              <% for tool in (@tools || []) %>
                <li id="<%= tool[:id] %>">
                    <span>
                        <a title="<%= tool_text(tool) %>" href="<%= tool[:link] %>" <%= "target='#{tool[:target]}'"if tool[:target] %>><%= tool_text(tool) %></a>
                    </span>
                </li>
              <% end  %>
            </ul>
          </div>
          <!--[if !IE]>tools<![endif]-->
<%= widget(:simple_mode_path, :path_elements => @path) %>
          <!-- <div id="talia_link"><a href="http://www.talia.discovery-project.eu/">Powered by Talia</a></div> -->
        </div>
        <!--[if !IE]>navigate<![endif]-->
        
        
        <!--[if !IE]>advanced search<![endif]-->
<%= edition_partial :header_extension %>

<%= yield %>
        
        
      </div>
      <!--[if !IE]>page_int<![endif]-->
    </div>
    <!--[if !IE]>page_ext<![endif]-->

    <!-- Footer -->
        <div id="footer">
          <div id="footer_first_line">
            <span class="left">
            Istituzioni: <a href="http://www.cnrs.fr/">CNRS</a> | <a href="http://www.ens.fr/">ENS</a> |
            <a href="http://www.item.ens.fr/">ITEM</a> | <a href="http://www.mfo.ac.uk/">MFO</a> |
            <a href="http://www.humboldt-foundation.de/">Humboldt</a> | <a href="http://www.dfg.de/">DFG</a> |
            <a href="http://www.klassik-stiftung.de/">KSW</a>
            </span>
            <span class="right">
               <a id="footer_europe" href=""></a>
            </span>
          </div>
          <div id="footer_second_line">
            <span class="left">
              Responsabile: <a href="http://www.google.com">Paolo D'Iorio</a> | <a href="http://www.google.com">
                Disclaimer</a> | <a href="http://www.google.com">Rights</a> | bla bla | bla bla
            </span>
            <span class="right">
              <a id="footer_talia" href=""></a>
            </span>
          </div>
        </div>
        <!-- Footer -->




    <%= google_analytics %>
  </body>
</html>