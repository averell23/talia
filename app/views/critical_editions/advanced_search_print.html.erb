  <div id="visore">
      <h2><%= @result.size %>  <%= t(:'talia.search.result phrase 1') %> <span class="red">'<%= params[:words] %>'</span> <%= t(:'talia.search.result phrase 2') %> <%= params[:edition_title] %></h2>


      <div class="resultstools"> <div class="print"><a href="#" title="print" onclick="window.print(); return false;"><%= t(:'talia.search.print results') %></a></div>
        <a href="#" title="full description" onclick="($A(getElementsByName('advanced_search_result_full_description[]'))).each(function(item){Element.show(item);});($A(getElementsByName('advanced_search_result_description[]'))).each(function(item){Element.hide(item);});return false;"><%= t(:'talia.search.full content') %></a> |
        <a href="#" title="expand all" onclick="($A(getElementsByName('advanced_search_result_full_description[]'))).each(function(item){Element.hide(item);});($A(getElementsByName('advanced_search_result_description[]'))).each(function(item){Element.show(item);});return false;"><%= t(:'talia.search.expand all') %></a> |
