@title_links = [
  [t(:"talia.start_page.about_link"), "http://www.about.com/"],
  [t(:"talia.start_page.comittee_link"), "http://www.scholars.com"],
  [t(:"talia.start_page.devteam_link"), "http://www.team.com/"]
